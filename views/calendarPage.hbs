<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Calendar</title>
        <script src="https://cdn.tailwindcss.com"></script>
        <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">        
        <script src="https://kit.fontawesome.com/fe3d3f96be.js"></script>
        <link
            href="https://cdn.jsdelivr.net/npm/vanilla-calendar-pro/build/vanilla-calendar.min.css"
            rel="stylesheet"
        />
        <script
            src="https://cdn.jsdelivr.net/npm/vanilla-calendar-pro/build/vanilla-calendar.min.js"
            defer
        ></script>
    </head>
    <body>
        <div class="flex text-white">
            <aside class="bg-[#21242C] w-1/6 min-h-screen flex flex-col">
                <div class="text-center py-5" id="avatar-box">
                    <figure class="hover:translate-y-2 transition-all cursor-pointer">
                        <a href=""><i class="fa-solid fa-circle-user text-6xl"></i></a>
                        <figcaption>{{username}}</figcaption>
                    </figure>
                </div>
                <nav>
                    <ul class="flex flex-col text-2xl">
                        <li
                            class="p-3 bg-[#272B34] my-2 hover:text-[#1EFE80] hover:translate-x-4 transition-all"
                        >
                            <i
                                class="fa-solid fa-table-cells text-2xl mr-3 w-8"
                                style="color: #1efe80"
                            ></i
                            ><a href="/dashboard/{{username}}">Dashboard</a>
                        </li>
                        <li
                            class="p-3 bg-[#272B34] my-2 hover:text-[#1EFE80] hover:translate-x-4 transition-all"
                        >
                            <i class="fa-solid fa-book text-2xl mr-3 w-8" style="color: #1efe80"></i
                            ><a href="/courses/{{username}}">Courses</a>
                        </li>
                        <li
                            class="p-3 bg-[#272B34] my-2 hover:text-[#1EFE80] hover:translate-x-4 transition-all text-[#1EFE80] border-r-4 border-[#1EFE80]"
                        >
                            <i
                                class="fa-solid fa-calendar-day text-2xl mr-3 w-8"
                                style="color: #1efe80"
                            ></i
                            >Calendar
                        </li>
                        <li
                            class="p-3 bg-[#272B34] my-2 hover:text-[#1EFE80] hover:translate-x-4 transition-all"
                        >
                            <i class="fa-solid fa-list text-2xl mr-3 w-8" style="color: #1efe80"></i
                            ><a href="/gradebook/{{username}}">Gradebook</a>
                        </li>
                        <li
                            class="p-3 bg-[#272B34] my-2 hover:text-[#1EFE80] hover:translate-x-4 transition-all"
                        >
                            <i class="fa-solid fa-bell text-2xl mr-3 w-8" style="color: #1efe80"></i
                            ><a href="/notification/{{username}}">Notification</a>
                        </li>
                        <li
                            class="p-3 bg-[#272B34] my-2 hover:text-[#1EFE80] hover:translate-x-4 transition-all"
                        >
                            <i class="fa-solid fa-gear text-2xl mr-3 w-8" style="color: #1efe80"></i
                            ><a href="/setting/{{username}}">Setting</a>
                        </li>
                    </ul>
                </nav>
                <div class="text-center mt-auto" id="app-logo">
                    <figure>
                        <a class="block" href="/"
                            ><i class="fa-solid fa-school text-4xl" style="color: #1efe80"></i
                        ></a>
                        <figcaption class="font-mono font-bold">Academic Planner</figcaption>
                    </figure>
                </div>
            </aside>
            <main class="bg-[#272B34] w-5/6 min-h-screen p-10">
                <h1 class="text-[#1EFE80] text-5xl">Calendar</h1>
                <section class="m-10 h-3/4">
                    <div id="calendar" class="w-4/5 h-full"></div>
                </section>
            </main>
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const calendar = new VanillaCalendar('#calendar');
                calendar.init();
            });
        </script>
    </body>
</html>
